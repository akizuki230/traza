<%= render 'layouts/navigation' %>
<p id="notice"><%= notice %></p>

<div class="container">
    <div class="row">
        <div class="box">
            <div class="col-lg-12">
                <hr>
                <h2 class="intro-text text-center">
                	Aca esta  <strong> la Persona</strong> que lo hace posible
                </h2>
                <hr>
            </div>
            <div class="col-lg-12 text-center">
                <img class="img-circle img-responsive"src="<%= @creator.avatar %>" alt="...">
                <h2><%= @creator.nombre %></h2>
                <p><%= @creator.descripcion%></p>
                <hr>
            </div>
            <% @contents.each do |content| %>
            	<%if content.type_id == 1 %>
              		<%@video  = content.contenido.split('=').last %>
            			<div class="col-lg-12 text-center">
	          				<iframe src="<%= "http://www.youtube.com/embed/"+@video%>"></iframe>
                			<h2>categoria</h2>
                			<p><%= content.descripcion %></p>
                			<hr>
            			</div>
            	<%end%>
            	<%if content.type_id == 2%>
            		<div class="col-lg-12 text-center">
                		<img class="img-responsive img-border img-full" src="<%= content.contenido %>"alt="">
                		<h2>categoria</h2>
                		<p><%= content.descripcion %></p>
                   		<hr>
            		</div>
            	<%end%>
          <%end%>
        </div>
    </div>
</div>


<%= link_to 'Edit', edit_creator_path(@creator) %> |
<%= link_to 'Back', creators_path %>
